<UserControl x:Class="FFXI_Navmesh_Builder.Views.InitializeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*" />
            <ColumnDefinition Width="31*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="InfoLb" Content="{Binding Message}"  Grid.Column="0" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment ="Center"   Margin="341,0,0,0" />
        <mah:MetroProgressBar Grid.Row="1" Grid.Column="0" Width="300" VerticalAlignment="Top" HorizontalAlignment ="Center"
                      IsIndeterminate="True" Margin="250,0,95,0" />
    </Grid>
</UserControl>